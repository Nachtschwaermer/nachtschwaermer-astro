---
const { persons, title } = Astro.props;
---
<section class='container mx-auto my-20 px-6 flex flex-col md:flex-row space-y-4 md:space-y-0 md:space-x-24 items-start'>
    <div class='md:pt-2 md:w-1/4'>
      <h2 class='uppercase font-title text-sm tracking-wide border-b border-green-600'>{ title }</h2>
    </div>
    <ul class='divide-y divide-gray-200 w-full md:w-3/4'>
        {persons.map(person => 
            <li class='py-4 flex flex-col md:flex-row justify-between md:items-center'>
                <span class='text-lg'>{ person.data.title }</span>
                <span class='text-sm uppercase font-bold text-gray-400 tracking-wide'>{ person.data.rank }</span>
            </li>
        )}
    </ul>
  </section>