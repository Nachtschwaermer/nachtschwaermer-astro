---
import { Picture } from 'astro:assets';
import wackelzug from '../assets/wackelzug2018.jpg';

export interface Props {
  text: string;
  cite: string;
}

const { text, cite } = Astro.props as Props;
---
<section class='my-20 jarallax'>
  <Picture src={wackelzug} layout='full-width' formats={['avif', 'webp']} alt='' class='absolute top-0 left-o w-full h-full object-cover object-top jarallax-img' />
  <div class='bg-gray-800/60 text-white text-center'>
    <blockquote class='container mx-auto py-36'>
      <p class='text-2xl sm:text-3xl md:text-4xl mb-3 font-slab'>{text}</p>
      <cite class='text-lg italic font-title'>{cite}</cite>
    </blockquote>
  </div>
</section>